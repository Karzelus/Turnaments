<Window x:Class="Turnament.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Turnament"
        mc:Ignorable="d"
        Title="Menu" Height="450" Width="800"
        Background="#292929"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Content="Create Tournament" MinWidth="100"
                Margin="10,0,0,0" 
                Background="Gray"
                VerticalAlignment="Center"
                HorizontalAlignment="Center" Click="BtnClickCreateTournament"/>
        <Button Grid.Row="1" Content="Select Tournament" MinWidth="100"
                Margin="10,0,0,0" 
                Background="Gray"
                VerticalAlignment="Center"
                HorizontalAlignment="Center" Click="BtnClickSelectTournament"/>
    </Grid>
</Window>
